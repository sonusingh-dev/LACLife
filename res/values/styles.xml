<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SimpleTextColor">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="SimpleTextColorWhite">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="PasscodeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_bg_passcode</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="SlidingMenuText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_compat_height</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/ic_bg_slide_menu_button</item>
    </style>

    <style name="RoundedCornerButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
    </style>

    <style name="DefaultYellowButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/rounded_corner_yellow_button</item>
    </style>

    <style name="SimpleTableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

