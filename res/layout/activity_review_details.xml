<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayout"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        style="@style/HeaderText"
        android:text="@string/title_please_confirm_that_the_details_are_correct" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow4"
            style="@style/SimpleTableRow" >

            <TextView
                style="@style/SimpleTextColor"
                android:layout_marginRight="6dp"
                android:text="Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtName"
                style="@style/SimpleTextColor"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            style="@style/SimpleTableRow" >

            <TextView
                style="@style/SimpleTextColor"
                android:layout_marginRight="6dp"
                android:text="Mobile"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMobile"
                style="@style/SimpleTextColor"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            style="@style/SimpleTableRow" >

            <TextView
                style="@style/SimpleTextColor"
                android:layout_marginRight="6dp"
                android:text="Policy"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPolicy"
                style="@style/SimpleTextColor"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            style="@style/SimpleTableRow" >

            <TextView
                style="@style/SimpleTextColor"
                android:layout_marginRight="6dp"
                android:text="Email"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                style="@style/SimpleTextColor"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            style="@style/SimpleTableRow" >

            <TextView
                style="@style/SimpleTextColor"
                android:layout_marginRight="6dp"
                android:text="DOB"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDOB"
                style="@style/SimpleTextColor"
                android:text="TextView" />
        </TableRow>
    </TableLayout>

    <TextView
        style="@style/SimpleTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/txt_click_here_to_view_our_full_terms_conditions" />

    <CheckBox
        android:id="@+id/chkAccept"
        style="@style/SimpleTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_tick_this_box_to_accept_" />

    <Button
        android:id="@+id/btnSubmitDetails"
        style="@style/DefaultYellowButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:text="@string/btn_submit_details" />

</LinearLayout>