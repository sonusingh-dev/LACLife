<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayout"
    android:orientation="vertical"
    android:padding="10dp" >

    <include layout="@layout/layout_title" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/txtRiskOption"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Mandatory"
                    android:textColor="@color/title_secondary_color"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtRiskName"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Risk Name" />

                <TextView
                    android:id="@+id/txtRiskDescription"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtRiskName"
                    android:text="Risk Description"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtSumInsured"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtRiskDescription"
                    android:text="@string/txt_sum_insured"
                    android:textColor="@color/title_secondary_color" />

                <EditText
                    android:id="@+id/edtSumInsured1"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtSumInsured"
                    android:layout_toLeftOf="@+id/chkRiskOption"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number" >
                </EditText>

                <CheckBox
                    android:id="@+id/chkRiskOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edtSumInsured1"
                    android:layout_alignBottom="@+id/edtSumInsured1"
                    android:layout_alignParentRight="true"
                    android:checked="true"
                    android:enabled="false"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>

            <include layout="@layout/layout_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/txtRiskOption"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Optional"
                    android:textColor="@color/title_secondary_color"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtRiskName"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Risk Name" />

                <TextView
                    android:id="@+id/txtRiskDescription"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtRiskName"
                    android:text="Risk Description"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtSumInsured"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtRiskDescription"
                    android:text="@string/txt_sum_insured"
                    android:textColor="@color/title_secondary_color" />

                <EditText
                    android:id="@+id/edtSumInsured2"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtSumInsured"
                    android:layout_toLeftOf="@+id/chkRiskOption"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number" >
                </EditText>

                <CheckBox
                    android:id="@+id/chkRiskOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edtSumInsured2"
                    android:layout_alignBottom="@+id/edtSumInsured2"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>

            <include layout="@layout/layout_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/txtRiskOption"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Optional"
                    android:textColor="@color/title_secondary_color"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtRiskName"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Risk Name" />

                <TextView
                    android:id="@+id/txtRiskDescription"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtRiskName"
                    android:text="Risk Description"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtSumInsured"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtRiskDescription"
                    android:text="@string/txt_sum_insured"
                    android:textColor="@color/title_secondary_color" />

                <EditText
                    android:id="@+id/edtSumInsured3"
                    style="@style/SimpleTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtSumInsured"
                    android:layout_toLeftOf="@+id/chkRiskOption"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number" >
                </EditText>

                <CheckBox
                    android:id="@+id/chkRiskOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/edtSumInsured3"
                    android:layout_alignBottom="@+id/edtSumInsured3"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnGetQuote"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/btn_get_quote" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>