<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    style="@style/BaseLayout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            style="@style/HeaderText"
            android:layout_marginBottom="6dp"
            android:text="@string/des_your_quote" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtOverview1"
                    style="@style/SimpleTextColor"
                    android:text="Premium Payable" />

                <TextView
                    android:id="@+id/txtOverview"
                    style="@style/SimpleTextColor"
                    android:text="N25,000" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/txtPlan1"
                    style="@style/SimpleTextColor"
                    android:text="Payment frequency" />

                <TextView
                    android:id="@+id/txtPlan"
                    style="@style/SimpleTextColor"
                    android:text="Monthly" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView3"
            style="@style/SimpleTextColor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="If you pay your premium as and when due, Leadway will pay you Nooo,ooo at maturity."
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView3"
            style="@style/SimpleTextColor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Should you die before the maturity date, Leadway will pay your named beneficiaries Nooo,ooo and the cover shall creases."
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView3"
            style="@style/SimpleTextColor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Should you fall Critically ill (as discribed in the policy), Leadway shall pay you Nooo,ooo and the cover ceases."
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView3"
            style="@style/SimpleTextColor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Should you be totally &amp; permanently disable (as discribed in the policy) following an accident, Leadway shall pay Nooo,ooo and the cover ceases."
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/btnEmail"
            style="@style/DefaultYellowButton"
            android:text="@string/btn_email_this_quote" />
    </LinearLayout>

</ScrollView>